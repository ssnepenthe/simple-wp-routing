{
    "name": "ssnepenthe/toy-wp-routing",
    "description": "Provides a more modern routing syntax to interact with the WP Rewrite API",
    "license": "MIT",
    "type": "library",
    "require": {
        "php": "^7.4 || ^8.0"
    },
    "require-dev": {
        "brain/monkey": "^2.6",
        "mikey179/vfsstream": "^1.6",
        "nikic/fast-route": "^1.3",
        "opis/closure": "^3.6",
        "php-di/invoker": "^2.3",
        "php-di/php-di": "^6.3",
        "php-stubs/wordpress-stubs": "^6.0",
        "phpunit/phpunit": "^9.5",
        "spatie/phpunit-snapshot-assertions": "^4.2",
        "symfony/var-dumper": "^5.0",
        "vimeo/psalm": "^4.23"
    },
    "suggest": {
        "nikic/fast-route": "Required to use default route syntax",
        "opis/closure": "Required to dump rewrites to a file when using closures for handlers",
        "php-di/invoker": "Required to use the InvokerBackedInvocationStrategy"
    },
    "autoload": {
        "psr-4": {
            "ToyWpRouting\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ToyWpRouting\\Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "ergebnis/composer-normalize": true
        }
    },
    "extra": {
        "composer-normalize": {
            "indent-size": 4,
            "indent-style": "space"
        }
    }
}
