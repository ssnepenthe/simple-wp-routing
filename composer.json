{
    "name": "ssnepenthe/toy-wp-routing",
    "description": "Provides a more modern routing syntax to interact with the WP Rewrite API",
    "license": "MIT",
    "type": "library",
    "require": {
        "php": "^7.4 || ^8.0"
    },
    "require-dev": {
        "brain/monkey": "^2.6.1",
        "laravel/serializable-closure": "^1.2",
        "mikey179/vfsstream": "^1.6.7",
        "php-di/invoker": "^2.3",
        "php-stubs/wordpress-stubs": "^6.0",
        "phpunit/phpunit": "^9.5",
        "spatie/phpunit-snapshot-assertions": "^4.2",
        "ssnepenthe/wp-dump-zone": "^0.1.0",
        "symfony/browser-kit": "^5.4 || ^6.0",
        "symfony/css-selector": "^5.4 || ^6.0",
        "symfony/http-client": "^5.4 || ^6.0",
        "symfony/mime": "^5.4",
        "vimeo/psalm": "^4.0"
    },
    "suggest": {
        "laravel/serializable-closure": "Required to dump rewrites to a file when using closures for handlers",
        "php-di/invoker": "Required to use the InvokerBackedInvocationStrategy"
    },
    "autoload": {
        "psr-4": {
            "ToyWpRouting\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ToyWpRouting\\Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "ergebnis/composer-normalize": true
        }
    },
    "extra": {
        "composer-normalize": {
            "indent-size": 4,
            "indent-style": "space"
        }
    },
    "scripts": {
        "test:e2e": "vendor/bin/phpunit --testsuite browser",
        "test:e2e-cache": "vendor/bin/phpunit --testsuite browser -d --use-rewrite-cache",
        "test:unit": "vendor/bin/phpunit --testsuite unit"
    }
}
